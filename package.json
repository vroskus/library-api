  "repository": {
    "type": "git",
    "url": "git+https://github.com/vroskus/library-api.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:eslint && npm run test:e2e",
    "test:eslint": "eslint src test --fix",
    "test:e2e": "npm run test:e2e:run && npm run test:e2e:post",
    "test:e2e:run": "jest --ci --colors",
    "test:e2e:post": "jest-coverage-thresholds-bumper"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "axios-mock-adapter": "^2.0.0",
    "lodash": "^4.17.21",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.4.1",
    "@types/query-string": "^6.3.0",
    "@vroskus/eslint-config": "^1.0.11",
    "jest": "^29.7.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 52.77,
