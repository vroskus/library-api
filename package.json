  "repository": {
    "type": "git",
    "url": "git+https://github.com/vroskus/library-api.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:eslint && npm run test:type && npm run test:e2e",
    "test:eslint": "eslint src test --fix",
    "test:type": "tsc",
    "test:e2e": "npm run test:e2e:run && npm run test:e2e:post",
    "test:e2e:run": "jest --ci --colors",
    "test:e2e:post": "jest-coverage-thresholds-bumper"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "axios-mock-adapter": "^2.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@types/query-string": "^6.3.0",
    "@vroskus/eslint-config": "^1.0.30",
    "express": "^5.2.1",
    "jest": "^30.2.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
